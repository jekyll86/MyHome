<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jeckyll86.xenont.myhome.frontend.activity.home.EditOrCreateActivity">

    <TextView android:text="Name"
        android:id="@+id/home_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/home_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/home_name_text"
        android:layout_alignLeft="@+id/home_address_edit"
        android:layout_alignStart="@+id/home_address_edit" />


    <TextView android:text="Address"
        android:id="@+id/home_address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_name_text"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/home_address_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/home_address_text"
        android:layout_alignBaseline="@id/home_address_text"
        android:layout_below="@id/home_name_edit"
        android:layout_marginLeft="20dp"
/>


    <TextView android:text="Port"
        android:id="@+id/home_port_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_address_text"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/home_port_text"
        android:layout_below="@id/home_address_edit"
        android:id="@+id/home_port_edit"
        android:inputType="number"
        android:maxLength="5"
        android:layout_alignLeft="@+id/home_address_edit"
        android:layout_alignStart="@+id/home_address_edit" />

  <!--  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/home_port_text"
        android:layout_alignStart="@+id/home_port_text" />-->

</RelativeLayout>
