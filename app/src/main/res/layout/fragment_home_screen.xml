<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.jeckyll86.xenont.myhome.frontend.fragment.HomeScreenFragment">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/text_descrption"
    android:text="Select your home and tap Get Data Button\nTo add an home, tap add button"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="40dp"
        android:id="@+id/home_spinner"
        android:layout_below="@id/text_descrption"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dropdown"
        >
    </Spinner>

    <Button
        android:id="@+id/button_get_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_data"
        android:layout_below="@id/home_spinner"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        />

    <Button
        android:id="@+id/button_view_homes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_your_homes"
        android:layout_below="@id/button_get_data"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
